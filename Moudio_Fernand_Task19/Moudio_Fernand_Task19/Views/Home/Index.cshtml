@model UsersViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome in Users-Awards</h1>
    <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-user-tab" data-toggle="pill" href="#v-pills-user" role="tab" aria-controls="v-pills-user" aria-selected="true">Пользователи</a>
                <a class="nav-link" id="v-pills-award-tab" data-toggle="pill" href="#v-pills-award" role="tab" aria-controls="v-pills-award" aria-selected="false">Награды</a>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-user" role="tabpanel" aria-labelledby="v-pills-user-tab">
                    <table>
                        <caption style="caption-side:top">My Users</caption>
                        <tr>
                            <th>User Names</th>
                            <th>Date of Birth</th>
                            <th>Name of Awards</th>
                            <th>Age</th>
                        </tr>
                        @foreach (var user in Model.ListUsers)
                        {
                            <tr>
                                <td>
                                    @user.FirstName @user.LastName
                                </td>
                                <td>
                                    @user.BirthDate
                                </td>
                                <td>
                                    @user.Awards
                                </td>
                                <td>
                                    @user.Age
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="tab-pane fade" id="v-pills-award" role="tabpanel" aria-labelledby="v-pills-user-tab">

                </div>
            </div>
        </div>
    </div>
</div>

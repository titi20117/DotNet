@model UsersAndAwardsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добро-пожаловать</h1>
    @* where im stoping *@
    <div class="d-none">
        @using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
	    {
		    <label>Имя :</label>
            <input name="firstName" id="firstName" required/>

            <label>Фамилия :</label>
            <input name="lastName" id="lastName" required/>

            <label>Дата Рождения :</label>
            <input name="birthDate" id="birthDate" required/>

            <label>Награда :</label>
            <input name="awardTitle" id="awardTitle"/>

            <input type="submit" value="Submit"/>
	    }
    </div>
    <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-user-tab" data-toggle="pill" href="#v-pills-user" role="tab" aria-controls="v-pills-user" aria-selected="true">Пользователи</a>
                <a class="nav-link" id="v-pills-award-tab" data-toggle="pill" href="#v-pills-award" role="tab" aria-controls="v-pills-award" aria-selected="false">Награды</a>
            </div>

        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-user" role="tabpanel" aria-labelledby="v-pills-user-tab">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Имена</th>
                                <th scope="col">Дата рождения</th>
                                <th scope="col">Название награды</th>
                                <th scope="col">возраст</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                    int i = 1;
                                @foreach (var user in Model.ListUsers)
                                {
                                    <tr class="tr-pointer row_OnClick">
                                        <th scope="row">@i</th>
                                        <td>
                                            @user.FirstName @user.LastName
                                        </td>
                                        <td>
                                            @user.BirthDate
                                        </td>
                                        <td>
                                            @user.Awards
                                        </td>
                                        <td>
                                            @user.Age
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="v-pills-award" role="tabpanel" aria-labelledby="v-pills-user-tab">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Название</th>
                                <th>Описание</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int j = 1;
                                @foreach (var award in Model.ListAwards)
                                {
                                    <tr class="tr-pointer row_OnClick">
                                        <th scope="row">@j</th>
                                        <td>
                                            @award.Title
                                        </td>
                                        <td>
                                            @award.Description
                                        </td>
                                    </tr>
                                    j++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

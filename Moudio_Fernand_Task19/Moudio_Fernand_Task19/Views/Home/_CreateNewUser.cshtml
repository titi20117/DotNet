
@*@{
    ViewData["Title"] = "_CreateNewUser";
}*@

<div class="d-block text-justify modal" id="newUserModal">
    <div class="modal-content">
        @using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
        {
            <fieldset>
                <div>
                    <button type="button" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5>Добавить пользователь</h5>
                </div>

                <div>
                    <label>Имя :</label>
                    <input type="text" name="firstName" id="firstName" required />
                </div>

                <div>
                    <label>Фамилия :</label>
                    <input type="text" name="lastName" id="lastName" required />
                </div>

                <div>
                    <label>Дата Рождения :</label>
                    <input type="date" name="birthDate" id="birthDate" required />
                </div>

                <div>
                    <label>Награда :</label>
                    <input type="text" name="awardTitle" id="awardTitle" />
                </div>

                <div>
                    <input type="submit" value="Submit" />
                    <button>Отменить</button>
                </div>

            </fieldset>
        }
    </div>
</div>

